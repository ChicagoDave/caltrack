# Environment Variables Configuration

# Nutritionix API Credentials
# Get your free API key at: https://www.nutritionix.com/business/api
# Free tier includes 500 requests per day
VITE_NUTRITIONIX_APP_ID=your_app_id_here
VITE_NUTRITIONIX_APP_KEY=your_api_key_here

# Application Settings
NODE_ENV=development
PORT=3000

# Database Settings (if using remote sync)
DB_SYNC_ENABLED=false
DB_SYNC_URL=

# PWA Settings
ENABLE_OFFLINE=true
CACHE_VERSION=v1

# Analytics (optional)
GA_TRACKING_ID=

# Feature Flags
ENABLE_BARCODE_SCANNER=true
ENABLE_SOCIAL_FEATURES=false
ENABLE_PREMIUM_FEATURES=false